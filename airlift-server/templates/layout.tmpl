{{ define "common" }}<!doctype html>
<html>
  <head>
    <title>Airlift</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        -moz-box-sizing: border-box;
      }
      html {
        background: #fafafa;
        display: flex;
        display: -webkit-flex;
        display: -moz-flex;
        align-content: center;
        align-items: center;
        justify-content: center;
        -webkit-align-content: center;
        -webkit-align-items: center;
        -webkit-justify-content: center;
        -moz-align-content: center;
        -moz-align-items: center;
        -moz-justify-content: center;
        width: 100%;
        height: 100%;
      }
      body {
        width: 512px;
        padding: 32px;
        background: #fff;
        font-family: sans-serif;
        border: 3px solid #eee;
      }
      a, a:visited {
        color: #a42;
      }
      a:hover {
        color: #c64;
      }
      hr {
        border: 0;
        border-top: 1px solid #ccc;
        margin: 16px 0;
      }
      button {
        -webkit-appearance: none;
        -moz-appearance: none;
        padding: 8px;
        font-size: 14px;
        font-weight: 700;
        border: none;
        background: #eaeaea;
        color: #444;
        font-family: sans-serif;
        margin-right: 8px;
      }
      button:hover {
        background: #c64;
        color: #fff;
      }
      button:active {
        background: #a42;
        color: #fff;
      }
      label {
        display: block;
        font-weight: 700;
        font-size: 14px;
        color: #666;
      }
      input[type=text], input[type=password] {
        width: 100%;
        padding: 8px;
        margin: 8px 0;
        -webkit-appearance: none;
        -moz-appearance: none;
        border: none;
        background: #fafafa;
        font-family: sans-serif;
        font-size: 18px;
        color: #444;
        border: 1px solid #ccc;
      }
      input:focus {
        outline: none;
        border: 2px solid #888;
        margin: 7px -1px;
      }
      #host-box, #port-box {
        display: inline-block;
      }
      #host-box {
        width: 325px;
        margin-right: 32px;
      }
      #port-box {
        width: 80px;
      }
      #message-box {
        margin-bottom: 16px;
        padding: 16px;
      }
      #message-box.bad {
        background: #fee;
        color: #800;
      }
      #message-box.good {
        background: #eef4ee;
        color: #444;
      }
      #message-box:before {
        border-width: 1px;
        border-radius: 3px;
        display: inline-block;
        height: 20px;
        width: 20px;
        line-height: 18px;
        font-size: 18px;
        text-align: center;
        margin-right: 8px;
        font-weight: 900;
      }
      #message-box.good:before {
        content: "âœ“";
        color: #080;
        border-color: #4c4;
      }
      #message-box.bad:before {
        content: "!";
        font-family: georgia, serif;
        font-style: italic;
        color: #800;
        border-color: #c44;
      }
    </style>
  </head>
  <body>
    {{ content }}
  </body>
</html>
{{ end }}
